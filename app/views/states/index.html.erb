<!-- ======= .grid_12 - block begin ======= -->
<section class="grid_12">
	<div class="box">
		<div class="title"><span class="icon16_sprite i_network_monitor"></span>
			states
			<%= link_to 'New State', new_state_path, :class => "button limegreen small fr" %>
		</div> 
	
		<div class="inside">
			<div class="in">
				
				
				<table cellpadding="0" cellspacing="0" border="0" class="display" id="datatable_1">
					<thead>
						<tr>
													    <th>Name</th>
													    <th>Acronym</th>
														
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					<% @states.each do |state| %>
						<tr>
						
							<td><%= state.name %></td>
						
							<td><%= state.acronym %></td>
						
						
						<td><%= link_to 'Show', state %></td>
						<td><%= link_to 'Edit', edit_state_path(state) %></td>
						<td><%= link_to 'Destroy', state, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
				
			</div>
		</div>
		
	</div>
</section>
<!-- ======= .grid_12 - block end ======= -->