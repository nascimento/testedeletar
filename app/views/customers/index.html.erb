<!-- ======= .grid_12 - block begin ======= -->
<section class="grid_12">
	<div class="box">
		<div class="title"><span class="icon16_sprite i_network_monitor"></span>
			Customers
			<%= link_to 'New Customer', new_customer_path, :class => "button limegreen small fr" %>
		</div> 
	
		<div class="inside">
			<div class="in">
				
				
				<table cellpadding="0" cellspacing="0" border="0" class="display" id="datatable_1">
					<thead>
						<tr>
						    <th>Name</th>
						    <th>Hostname</th>
														
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					<% @customers.each do |customer| %>
						<tr>
						
							<td><%= customer.name %></td>
							<td><%= customer.hostname %></td>
							  
							<td><%= link_to 'Show', customer %></td>
							<td><%= link_to 'Edit', edit_customer_path(customer) %></td>
							<td><%= link_to 'Destroy', customer, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
						
						</tr>
					<% end %>
					</tbody>
				</table>
				
			</div>
		</div>
		
	</div>
</section>
<!-- ======= .grid_12 - block end ======= -->