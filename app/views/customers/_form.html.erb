<%= simple_form_for @customer, :html => { :class => "formee" }  do |f| %>
	
	<div class="in">
			<%= f.input :name %>
			<%= f.input :hostname %>
	</div>
	
  	<!--Form footer begin-->
	<section class="box_footer">
		<div class="grid-12-12">
			<input type="reset" class="right button red" value="Clear" />
			<%= f.button :submit, :class => "right button green" %>
		</div>
		<div class="clear"></div>
	</section>
	<!--Form footer end-->

<% end %>
