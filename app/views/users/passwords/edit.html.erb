<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put , :class => "formee" }) do |f| %>
<div class="box">
	<div class="title"><span class="icon16_sprite i_user"></span>Change your password</div>
	
	<div class="inside">
		<div class="in">
			<%= f.error_notification %>
			
		    <%= f.input :reset_password_token, :as => :hidden %>
		  	<%= f.full_error :reset_password_token %>
		
			<%= f.input :password, :label => "New password", :required => true, :autofocus => true %>
		    <%= f.input :password_confirmation, :label => "Confirm your new password", :required => true %>

			<div class="clear"></div>
			
		</div>
		<section class="box_footer">
			<div class="grid-6-12">
				<%= render "devise/shared/links" %>
			</div>
			<div class="grid-6-12">
				<%= f.button :submit, "Change my password", :class => "right button green" %>
			</div>
			<div class="clear"></div>
		</section>
	</div>
</div>
<% end %>