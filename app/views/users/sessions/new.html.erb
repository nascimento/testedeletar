<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "formee" }) do |f| %>
<div class="box">
	<div class="title"><span class="icon16_sprite i_user"></span>Sign in</div>
	
	<div class="inside">
		<div class="in">
		    <%= f.input :email, :required => false, :autofocus => true %>
		    <%= f.input :password, :required => false %>
		    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
		

			<div class="clear"></div>
			
		</div>
		<section class="box_footer">
			<div class="grid-6-12">
				<%= render "devise/shared/links" %>
			</div>
			<div class="grid-6-12">
				<%= f.button :submit, "Sign in", :class => "right button green" %>
			</div>
			<div class="clear"></div>
		</section>
	</div>
</div>
<% end %>