<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "formee" }) do |f| %>
<div class="box">
	<div class="title"><span class="icon16_sprite i_user"></span>Sign up</div>
	
	<div class="inside">
		<div class="in">
			<%= f.error_notification %>
			
		    <%= f.input :name, :required => true %>

			<%= f.input :nickname, :required => true %>
			
			<%= f.input :cnpj %>
			<%= f.input :cpf %>

			<%= f.input :email, :required => true, :autofocus => true %>

		    <%= f.input :password, :required => true %>
		    <%= f.input :password_confirmation, :required => true %>

			<div class="clear"></div>
			
		</div>
		<section class="box_footer">
			<div class="grid-6-12">
				<%= render "devise/shared/links" %>
			</div>
			<div class="grid-6-12">
				<%= f.button :submit, "Sign up", :class => "right button green" %>
			</div>
			<div class="clear"></div>
		</section>
	</div>
</div>
<% end %>