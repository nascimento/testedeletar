<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "formee" }) do |f| %>
<div class="box">
	<div class="title"><span class="icon16_sprite i_user"></span>Edit <%= resource_name.to_s.humanize %> <%= link_to "Back", :back, :html => {:class => "right"} %></div>
	
	<div class="inside">
		<div class="in">
			<%= f.error_notification %>
			
		    <%= f.input :name, :required => true %>
		    
		    <%= f.input :nickname, :required => true %>
		
			<%= f.input :cnpj %>
			<%= f.input :cpf %>

			
			<%= f.input :email, :required => true, :autofocus => true %>
		    
		<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
		      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
		    <% end %>

		    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
		    <%= f.input :password_confirmation, :required => false %>
		    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>

			<div class="clear"></div>
			
		</div>
		<section class="box_footer">
			<div class="grid-6-12">
				<br>
				<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
			</div>
			<div class="grid-6-12">
				<%= f.button :submit, "Update", :class => "right button green" %>
			</div>
			<div class="clear"></div>
		</section>
	</div>
</div>
<% end %>