<%= simple_form_for @group, :html => { :class => "formee" }  do |f| %>
	
	<div class="in">
			<%= f.input :name %>
			<%= f.hidden_field :parent_id, :value => params[:parent_id] %>
			
			<% if @users %>
				<%= f.collection_check_boxes :user_ids, @users, :id, :name %>
			<% end %>

	</div>
	
  	<!--Form footer begin-->
	<section class="box_footer">
		<div class="grid-12-12">
			<input type="reset" class="right button red" value="Clear" />
			<%= f.button :submit, :class => "right button green" %>
		</div>
		<div class="clear"></div>
	</section>
	<!--Form footer end-->

<% end %>
