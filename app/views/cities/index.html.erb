<!-- ======= .grid_12 - block begin ======= -->
<section class="grid_12">
	<div class="box">
		<div class="title"><span class="icon16_sprite i_network_monitor"></span>
			cities
			<%= link_to 'New City', new_city_path, :class => "button limegreen small fr" %>
		</div> 
	
		<div class="inside">
			<div class="in">
				
				
				<table cellpadding="0" cellspacing="0" border="0" class="display" id="datatable_1">
					<thead>
						<tr>
													    <th>Name</th>
													    <th>Capital</th>
													    <th>State</th>
														
							<th></th>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					<% @cities.each do |city| %>
						<tr>
						
							<td><%= city.name %></td>
						
							<td><%= city.capital %></td>
						
							<td><%= city.state_id %></td>
						
						
						<td><%= link_to 'Show', city %></td>
						<td><%= link_to 'Edit', edit_city_path(city) %></td>
						<td><%= link_to 'Destroy', city, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
				
			</div>
		</div>
		
	</div>
</section>
<!-- ======= .grid_12 - block end ======= -->